<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/sixteenIntuit"
    android:layout_marginTop="@dimen/sixteenIntuit"
    android:layout_marginRight="@dimen/sixteenIntuit"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/eightIntuit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40AAAAAA"
        android:paddingTop="@dimen/eightIntuit"
        android:paddingBottom="@dimen/eightIntuit">

        <CheckBox
            android:id="@+id/checkBoxTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/checkBoxTask"
            android:orientation="vertical"
            android:paddingLeft="@dimen/eightIntuit">

            <TextView
                android:id="@+id/textViewTask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Job"
                android:textColor="@android:color/black"
                android:textSize="@dimen/twentyTwoIntuit" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Friday, 24 April 2020"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sixteenIntuit" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>