<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_format_list_bulleted" />

    <TextView
        android:id="@+id/textViewCategorySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewSpinner"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewSpinner"
        android:layout_toRightOf="@+id/imageViewSpinner"
        android:text="Job"
        android:textSize="20sp" />

</RelativeLayout>